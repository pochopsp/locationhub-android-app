<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_view"
    app:startDestination="@id/nav_login">

    <fragment
        android:id="@+id/nav_home"
        android:name="it.unina.locationhub.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_map"
            app:destination="@id/nav_map" />
    </fragment>
    <fragment
        android:id="@+id/nav_map"
        android:name="it.unina.locationhub.fragments.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_nav_map_to_nav_settings"
            app:destination="@id/nav_settings" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="it.unina.locationhub.fragments.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_login"
        android:name="it.unina.locationhub.fragments.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/nav_location_error"
        android:name="it.unina.locationhub.fragments.error.LocationErrorFragment"
        android:label="fragment_location_error"
        tools:layout="@layout/fragment_location_error" />
    <fragment
        android:id="@+id/nav_server_or_network_error"
        android:name="it.unina.locationhub.fragments.error.ServerOrNetworkErrorFragment"
        android:label="ServerErrorFragment" />
</navigation>